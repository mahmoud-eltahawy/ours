#!/usr/bin/env nu

def "main dev" [] {
  rm ../target/app/ -rf
  cd ../site
  trunk build
  cd ../webls_app
  cargo build
  cd ../target
  mkdir app
  cd app
  cp ../debug/webls_app ./
  ./webls_app
}

def "main release" [] {
  rm ../target/app/ -rf
  cd ../site
  trunk build --release
  cd ../webls_app
  cargo build --release
  cd ../target
  mkdir app
  cd app
  cp ../debug/webls_app ./
}

def main [] {}
