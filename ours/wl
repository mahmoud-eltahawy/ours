#!/usr/bin/env nu

def "main dev" [] {
  cd ../site
  trunk build
  cd ..
  ls assets/temp | get name | par-each {|x| gzip $x}  
  cd ours
  cargo run
  # rm ../assets/temp -rf
}

def "main release" [] {
  cd ../site
  trunk build --release
  cd ..
  ls assets/temp | get name | par-each {|x| gzip $x}  
  cd ours
  cargo build --release
  # rm ../assets/temp -rf
}

def "main install" [] {
  cd ../site
  trunk build --release
  cd ..
  ls assets/temp | get name | par-each {|x| gzip $x}  
  cd ours
  cargo install --path .
  # rm ../assets/temp -rf
}

def main [] {}
